{
  "compilerOptions": {
    "rootDir": "src",
    "incremental": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ESNext", "DOM"]
  },
  "exclude": ["./dist"],
}